@model IEnumerable<HRApp.Models.CompanyViewModel>

@{
    ViewData["Title"] = "Company Applications";
}

<h2>Company Applications</h2>

<table class="table">
    <thead>
        <tr>
            <th>Company Name</th>
            <th>Address</th>
            <th>Email</th>
            <th>Phone Number</th>
            <th>Applicant Username</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Company.Name</td>
                <td>@item.Company.Address</td>
                <td>@item.Company.Email</td>
                <td>@item.Company.PhoneNumber</td>
                <td>@item.Company.Applicant.UserName</td>
                <td>
                    <form asp-action="ToggleRole" method="post" class="promote-form">
                        <input type="hidden" name="userId" value="@item.Company.Applicant.Id" />
                        <button type="submit" class="btn promote-button" data-current-role="@item.ApplicantRoles.FirstOrDefault()">
                            @(item.ApplicantRoles.Contains("Company Executive") ? "Company Executive" : "Promote to Executive")
                        </button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

@section Scripts {
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const forms = document.querySelectorAll(".promote-form");
            forms.forEach(form => {
                form.addEventListener("submit", function (event) {
                    event.preventDefault();
                    const button = form.querySelector(".promote-button");
                    const currentRole = button.getAttribute("data-current-role");

                    if (currentRole === "Company Executive") {
                        button.classList.remove("btn-success");
                        button.classList.add("btn-primary");
                        button.textContent = "Promote to Executive";
                        button.setAttribute("data-current-role", "Employee");
                    } else {
                        button.classList.remove("btn-primary");
                        button.classList.add("btn-success");
                        button.textContent = "Company Executive";
                        button.setAttribute("data-current-role", "Company Executive");
                    }

                    form.submit();
                });
            });
        });
    </script>
}
